{
    "manifest_version": 3,
    "name": "Hayako QT",
    "description": "Extension for translation without escaping the tab.",
    "homepage_url": "https://github.com/reyeees/hayako-qt",
    "version": "1.3.0",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content.js"
            ],
            "css": [
                "sheets/styles.css"
            ]
        }
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "host_permissions": [
        "*://*/*"
    ],
    "action": {
        "default_popup": "sheets/main.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_page": "sheets/options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/icon48.png"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ]
}